@model IEnumerable<Services.Models.ClassDto>

@{
    ViewData["Title"] = "Chọn lớp học - " + ViewBag.SemesterName;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chalkboard-teacher"></i> Danh sách lớp học - @ViewBag.SemesterName
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_Notifications" />

                    <div class="mb-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại chọn học kỳ
                        </a>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã lớp</th>
                                        <th>Tên lớp</th>
                                        <th>Môn học</th>
                                        <th>Giảng viên</th>
                                        <th>Sĩ số</th>
                                        <th>Lịch học</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var classItem in Model)
                                    {
                                        <tr>
                                            <td><strong>@classItem.ClassCode</strong></td>
                                            <td>@classItem.ClassName</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @classItem.CourseName
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-tie"></i>
                                                @(classItem.TeacherName ?? "N/A")
                                            </td>
                                            <td>
                                                <span class="badge @(classItem.CurrentEnrollment >= classItem.MaxCapacity ? "bg-danger" : "bg-success")">
                                                    @classItem.CurrentEnrollment / @classItem.MaxCapacity
                                                </span>
                                            </td>
                                            <td>
                                                <small>
                                                    @classItem.DayOfWeekPair - @classItem.TimeSlot - @classItem.Room
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="ClassDetails" 
                                                   asp-route-classId="@classItem.ClassId" 
                                                   class="btn btn-sm btn-primary"
                                                   title="Nhập điểm">
                                                    <i class="fas fa-edit"></i> Nhập điểm
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Không có lớp học nào trong học kỳ này!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
