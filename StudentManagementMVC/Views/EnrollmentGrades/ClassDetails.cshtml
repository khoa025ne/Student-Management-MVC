@model IEnumerable<DataAccess.Entities.Enrollment>

@{
    ViewData["Title"] = "Nhập điểm - " + ViewBag.ClassName;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-pen-alt"></i> Nhập điểm - <strong>@ViewBag.ClassName</strong>
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_Notifications" />

                    <div class="mb-3">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách lớp
                        </a>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <form asp-action="BulkUpdate" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="classId" value="@ViewBag.ClassId" />

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>STT</th>
                                            <th>Mã SV</th>
                                            <th>Họ và tên</th>
                                            <th>Email</th>
                                            <th class="text-center">Điểm GK<br/><small>(0-10)</small></th>
                                            <th class="text-center">Điểm CK<br/><small>(0-10)</small></th>
                                            <th class="text-center">Tổng kết<br/><small>(40% GK + 60% CK)</small></th>
                                            <th class="text-center">Xếp loại</th>
                                            <th class="text-center">Kết quả</th>
                                            <th class="text-center">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int stt = 1; }
                                        @foreach (var enrollment in Model)
                                        {
                                            <tr>
                                                <td>@stt</td>
                                                <td>
                                                    <strong>@enrollment.Student?.StudentCode</strong>
                                                    <input type="hidden" name="enrollmentIds" value="@enrollment.EnrollmentId" />
                                                </td>
                                                <td>@enrollment.Student?.User?.FullName</td>
                                                <td><small>@enrollment.Student?.User?.Email</small></td>
                                                <td class="text-center">
                                                    <input type="number" 
                                                           name="midtermScores" 
                                                           class="form-control form-control-sm text-center score-input" 
                                                           value="@enrollment.MidtermScore" 
                                                           min="0" 
                                                           max="10" 
                                                           step="0.1" 
                                                           placeholder="0.0" />
                                                </td>
                                                <td class="text-center">
                                                    <input type="number" 
                                                           name="finalScores" 
                                                           class="form-control form-control-sm text-center score-input" 
                                                           value="@enrollment.FinalScore" 
                                                           min="0" 
                                                           max="10" 
                                                           step="0.1" 
                                                           placeholder="0.0" />
                                                </td>
                                                <td class="text-center">
                                                    @if (enrollment.TotalScore.HasValue)
                                                    {
                                                        <strong class="@(enrollment.IsPassed ? "text-success" : "text-danger")">
                                                            @enrollment.TotalScore.Value.ToString("F2")
                                                        </strong>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">--</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (!string.IsNullOrEmpty(enrollment.Grade))
                                                    {
                                                        <span class="badge @(enrollment.IsPassed ? "bg-success" : "bg-danger")">
                                                            @enrollment.Grade
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">--</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (enrollment.TotalScore.HasValue)
                                                    {
                                                        if (enrollment.IsPassed)
                                                        {
                                                            <span class="badge bg-success"><i class="fas fa-check"></i> Đậu</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger"><i class="fas fa-times"></i> Rớt</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">--</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="Edit" 
                                                       asp-route-enrollmentId="@enrollment.EnrollmentId" 
                                                       class="btn btn-sm btn-info"
                                                       title="Chi tiết & AI Analysis">
                                                        <i class="fas fa-robot"></i> AI
                                                    </a>
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Lưu ý:</strong> 
                                    <ul class="mb-0 mt-2">
                                        <li>Điểm giữa kỳ (GK) và cuối kỳ (CK) từ 0-10</li>
                                        <li>Tổng kết = 40% GK + 60% CK</li>
                                        <li>Xếp loại: A (8.5-10), B (7-8.4), C (5.5-6.9), D (4-5.4), F (&lt;4)</li>
                                        <li>Đậu nếu Tổng kết >= 5.0</li>
                                        <li>Sau khi lưu điểm, hệ thống sẽ tự động gửi email và phân tích AI</li>
                                    </ul>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-save"></i> Lưu tất cả điểm
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Chưa có sinh viên nào đăng ký lớp này!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        var scoreInputs = form.querySelectorAll('.score-input');
                        var hasInvalidScore = false;

                        scoreInputs.forEach(function(input) {
                            if (input.value !== '') {
                                var val = parseFloat(input.value);
                                if (val < 0 || val > 10) {
                                    hasInvalidScore = true;
                                    input.classList.add('is-invalid');
                                } else {
                                    input.classList.remove('is-invalid');
                                }
                            }
                        });

                        if (hasInvalidScore) {
                            event.preventDefault();
                            event.stopPropagation();
                            alert('Điểm phải trong khoảng 0-10!');
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Highlight changed scores
        document.querySelectorAll('.score-input').forEach(function(input) {
            input.addEventListener('change', function() {
                this.style.backgroundColor = '#fff3cd';
            });
        });
    </script>
}
