@{
    var isAdmin = User.IsInRole("Admin");
    var isManager = User.IsInRole("Manager");
    var userRole = isAdmin ? "Admin" : isManager ? "Manager" : "Staff";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var userName = User.Identity?.Name ?? "Administrator";
    var userInitials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : userName.ToUpper();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Bootstrap (for utilities) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Academia Admin CSS -->
    <link rel="stylesheet" href="~/css/academia-admin.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-layout">
    <div class="admin-wrapper">
        <!-- Sidebar Overlay (Mobile) -->
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <!-- Brand -->
            <div class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>@(isAdmin ? "Admin Panel" : "Manager Panel")</h1>
                    <p>Quản lý hệ thống</p>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="sidebar-nav">
                <!-- Main Menu -->
                <div class="sidebar-nav-section">
                    <div class="sidebar-nav-title">Menu chính</div>
                    
                    @if (isAdmin)
                    {
                        <a asp-controller="Dashboard" asp-action="Index" 
                           class="sidebar-link @(currentController == "Dashboard" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                        <a asp-controller="Home" asp-action="Index" 
                           class="sidebar-link @(currentController == "Home" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    }
                    @if (isManager)
                    {
                        <a asp-controller="Home" asp-action="Index" 
                           class="sidebar-link @(currentController == "Home" ? "active" : "")">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Quản lý học vụ</span>
                        </a>
                    }
                </div>

                <!-- User Management -->
                @if (isAdmin)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Quản lý người dùng</div>
                        <a asp-controller="Users" asp-action="Index" 
                           class="sidebar-link @(currentController == "Users" ? "active" : "")">
                            <i class="fas fa-users-cog"></i>
                            <span>Tài khoản</span>
                        </a>
                        <a asp-controller="Students" asp-action="Index" 
                           class="sidebar-link @(currentController == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                    </div>
                }
                @if (isManager)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Quản lý sinh viên</div>
                        <a asp-controller="Students" asp-action="Index" 
                           class="sidebar-link @(currentController == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                    </div>
                }

                <!-- Academic Management -->
                <div class="sidebar-nav-section">
                    <div class="sidebar-nav-title">Quản lý đào tạo</div>
                    
                    @if (isAdmin)
                    {
                        <a asp-controller="Semesters" asp-action="Index" 
                           class="sidebar-link @(currentController == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                        <a asp-controller="Courses" asp-action="Index" 
                           class="sidebar-link @(currentController == "Courses" ? "active" : "")">
                            <i class="fas fa-book"></i>
                            <span>Môn học</span>
                        </a>
                    }
                    @if (isManager)
                    {
                        <a asp-controller="Semesters" asp-action="Index" 
                           class="sidebar-link @(currentController == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                    }
                    <a asp-controller="Classes" asp-action="Index" 
                       class="sidebar-link @(currentController == "Classes" && currentAction != "MyClasses" ? "active" : "")">
                        <i class="fas fa-chalkboard"></i>
                        <span>Lớp học</span>
                    </a>
                    <a asp-controller="EnrollmentGrades" asp-action="Index" 
                       class="sidebar-link @(currentController == "EnrollmentGrades" ? "active" : "")">
                        <i class="fas fa-edit"></i>
                        <span>Nhập điểm</span>
                    </a>
                </div>

                <!-- Reports & Tools -->
                @if (isAdmin)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Báo cáo & Công cụ</div>
                        <a asp-controller="AcademicAnalysis" asp-action="Index" 
                           class="sidebar-link @(currentController == "AcademicAnalysis" ? "active" : "")">
                            <i class="fas fa-chart-bar"></i>
                            <span>Phân tích học tập</span>
                        </a>
                        <a asp-controller="AIKnowledge" asp-action="Index" 
                           class="sidebar-link @(currentController == "AIKnowledge" ? "active" : "")">
                            <i class="fas fa-robot"></i>
                            <span>AI Knowledge</span>
                        </a>
                        <a asp-controller="Notifications" asp-action="Create" 
                           class="sidebar-link @(currentController == "Notifications" && currentAction == "Create" ? "active" : "")">
                            <i class="fas fa-bullhorn"></i>
                            <span>Gửi thông báo</span>
                        </a>
                    </div>
                }
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <button class="sidebar-toggle" onclick="collapseSidebar()">
                    <i class="fas fa-chevron-left"></i>
                    <span>Thu gọn</span>
                </button>
            </div>

            <!-- User Section -->
            <div class="sidebar-user">
                <div class="sidebar-user-info">
                    <div class="sidebar-user-avatar">@userInitials</div>
                    <div class="sidebar-user-details">
                        <h4>@userName</h4>
                        <p>@userRole</p>
                    </div>
                </div>
                <a asp-controller="Auth" asp-action="Logout" class="sidebar-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="admin-main" id="adminMain">
            <!-- Header -->
            <header class="admin-header">
                <div class="admin-header-left">
                    <button class="admin-mobile-toggle" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="admin-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Tìm kiếm..." />
                    </div>
                </div>

                <div class="admin-header-right">
                    <!-- Notifications -->
                    <a asp-controller="Notifications" asp-action="Create" class="admin-notification-btn">
                        <i class="fas fa-bell"></i>
                        <span class="admin-notification-badge" style="display:none;">0</span>
                    </a>

                    <!-- User Menu -->
                    <div class="dropdown">
                        <button class="admin-user-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="admin-user-avatar">@userInitials</div>
                            <div class="admin-user-info">
                                <span>@userName</span>
                                <small>@userRole</small>
                            </div>
                            <i class="fas fa-chevron-down ms-1" style="font-size: 0.75rem;"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword">
                                    <i class="fas fa-key me-2"></i> Đổi mật khẩu
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="admin-content">
                <!-- Flash Messages -->
                <partial name="_Notifications" />
                
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="admin-footer">
                &copy; @DateTime.Now.Year Admin Panel - Hệ thống quản lý đào tạo
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Sidebar toggle for mobile
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }
        
        // Sidebar collapse for desktop
        function collapseSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.getElementById('adminMain');
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('sidebar-collapsed');
            
            // Save state
            localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
        }
        
        // Restore sidebar state
        document.addEventListener('DOMContentLoaded', function() {
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed && window.innerWidth >= 1024) {
                document.getElementById('adminSidebar').classList.add('collapsed');
                document.getElementById('adminMain').classList.add('sidebar-collapsed');
            }
        });
        
        // Close sidebar on escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('adminSidebar');
                const overlay = document.getElementById('sidebarOverlay');
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
