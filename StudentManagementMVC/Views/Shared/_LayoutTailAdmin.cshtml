<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Student Compass</title>
    
    <!-- TailAdmin Styles -->
    <link rel="stylesheet" href="~/css/tailadmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(ViewData["BodyClass"])">
    <div class="app-container">
        <!-- Sidebar Overlay (Mobile) -->
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <!-- Brand -->
            <div class="sidebar-brand">
                <div class="sidebar-brand-logo">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>Student Compass</h1>
                    <p>FPT Education</p>
                </div>
            </div>
            
            <!-- Navigation -->
            <nav class="sidebar-nav">
                @if (User.IsInRole("Admin"))
                {
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Dashboard</div>
                        <a asp-controller="Dashboard" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-chart-pie"></i>
                            <span>Tổng quan</span>
                        </a>
                        <a asp-controller="Dashboard" asp-action="Analytics" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Analytics" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Phân tích</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Quản lý</div>
                        <a asp-controller="Users" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                            <i class="fas fa-users-cog"></i>
                            <span>Tài khoản</span>
                        </a>
                        <a asp-controller="Students" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                        <a asp-controller="Courses" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active" : "")">
                            <i class="fas fa-book"></i>
                            <span>Môn học</span>
                        </a>
                        <a asp-controller="Classes" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Classes" ? "active" : "")">
                            <i class="fas fa-chalkboard"></i>
                            <span>Lớp học</span>
                        </a>
                        <a asp-controller="Semesters" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Điểm & Phân tích</div>
                        <a asp-controller="EnrollmentGrades" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "EnrollmentGrades" ? "active" : "")">
                            <i class="fas fa-edit"></i>
                            <span>Nhập điểm</span>
                        </a>
                        <a asp-controller="AcademicAnalysis" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AcademicAnalysis" ? "active" : "")">
                            <i class="fas fa-brain"></i>
                            <span>AI Phân tích</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">AI Knowledge Base</div>
                        <a asp-controller="AIKnowledge" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AIKnowledge" ? "active" : "")">
                            <i class="fas fa-database"></i>
                            <span>Knowledge Base</span>
                        </a>
                        <a asp-controller="AIKnowledge" asp-action="Logs" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Logs" ? "active" : "")">
                            <i class="fas fa-history"></i>
                            <span>AI Logs</span>
                        </a>
                    </div>
                }

                @if (User.IsInRole("Manager"))
                {
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Dashboard</div>
                        <a asp-controller="Dashboard" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-chart-pie"></i>
                            <span>Tổng quan</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Học vụ</div>
                        <a asp-controller="Students" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                        <a asp-controller="Classes" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Classes" ? "active" : "")">
                            <i class="fas fa-chalkboard"></i>
                            <span>Lớp học</span>
                        </a>
                        <a asp-controller="Semesters" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                        <a asp-controller="EnrollmentGrades" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "EnrollmentGrades" ? "active" : "")">
                            <i class="fas fa-edit"></i>
                            <span>Nhập điểm</span>
                        </a>
                    </div>
                }

                @if (User.IsInRole("Teacher"))
                {
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Giảng dạy</div>
                        <a asp-controller="Teacher" asp-action="Dashboard" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                        <a asp-controller="Classes" asp-action="MyClasses" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MyClasses" ? "active" : "")">
                            <i class="fas fa-chalkboard-teacher"></i>
                            <span>Lớp giảng dạy</span>
                        </a>
                        <a asp-controller="EnrollmentGrades" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "EnrollmentGrades" ? "active" : "")">
                            <i class="fas fa-edit"></i>
                            <span>Nhập điểm</span>
                        </a>
                        <a asp-controller="Schedule" asp-action="TeacherSchedule" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "TeacherSchedule" ? "active" : "")">
                            <i class="fas fa-calendar"></i>
                            <span>Lịch dạy</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Công cụ</div>
                        <a asp-controller="Notifications" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")">
                            <i class="fas fa-bell"></i>
                            <span>Thông báo</span>
                        </a>
                    </div>
                }

                @if (User.IsInRole("Student"))
                {
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Tổng quan</div>
                        <a asp-controller="Student" asp-action="Dashboard" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                        <a asp-controller="StudentProfile" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "StudentProfile" ? "active" : "")">
                            <i class="fas fa-user"></i>
                            <span>Hồ sơ cá nhân</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Học tập</div>
                        <a asp-controller="Schedule" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Schedule" ? "active" : "")">
                            <i class="fas fa-calendar"></i>
                            <span>Lịch học</span>
                        </a>
                        <a asp-controller="Enrollments" asp-action="Register" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Enrollments" ? "active" : "")">
                            <i class="fas fa-book-open"></i>
                            <span>Đăng ký môn</span>
                        </a>
                        <a asp-controller="Scores" asp-action="MyGrades" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Scores" ? "active" : "")">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Bảng điểm</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">AI & Lộ trình</div>
                        <a asp-controller="LearningPath" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "LearningPath" ? "active" : "")">
                            <i class="fas fa-route"></i>
                            <span>Lộ trình gợi ý</span>
                        </a>
                        <a asp-controller="AcademicAnalysis" asp-action="MyAnalysis" class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MyAnalysis" ? "active" : "")">
                            <i class="fas fa-brain"></i>
                            <span>Phân tích AI</span>
                        </a>
                    </div>
                    
                    <div class="sidebar-nav-group">
                        <div class="sidebar-nav-group-title">Khác</div>
                        <a asp-controller="Transfers" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Transfers" ? "active" : "")">
                            <i class="fas fa-exchange-alt"></i>
                            <span>Chuyển lớp</span>
                        </a>
                        <a asp-controller="Notifications" asp-action="Index" class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Notifications" ? "active" : "")">
                            <i class="fas fa-bell"></i>
                            <span>Thông báo</span>
                        </a>
                    </div>
                }
            </nav>
            
            <!-- User Section -->
            <div class="sidebar-user">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="sidebar-user-info">
                        <div class="sidebar-user-avatar">
                            @{
                                var userName = User.Identity.Name ?? "U";
                                var initials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : userName.ToUpper();
                            }
                            @initials
                        </div>
                        <div class="sidebar-user-details">
                            <div class="sidebar-user-name">@User.Identity.Name</div>
                            <div class="sidebar-user-role">
                                @if (User.IsInRole("Admin")) { <text>Quản trị viên</text> }
                                @if (User.IsInRole("Manager")) { <text>Quản lý học vụ</text> }
                                @if (User.IsInRole("Teacher")) { <text>Giảng viên</text> }
                                @if (User.IsInRole("Student")) { <text>Sinh viên</text> }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="header-left">
                    <button class="header-toggle" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="header-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Tìm kiếm..." id="globalSearch" />
                    </div>
                </div>
                
                <div class="header-right">
                    <!-- Dark Mode Toggle -->
                    <button class="header-icon-btn" onclick="toggleDarkMode()" title="Đổi theme">
                        <i class="fas fa-moon" id="darkModeIcon"></i>
                    </button>
                    
                    <!-- Notifications -->
                    <button class="header-icon-btn" onclick="toggleNotifications()" title="Thông báo">
                        <i class="fas fa-bell"></i>
                        <span class="badge" id="notificationBadge">3</span>
                    </button>
                    
                    <!-- Messages -->
                    <button class="header-icon-btn" onclick="toggleMessages()" title="Tin nhắn">
                        <i class="fas fa-envelope"></i>
                        <span class="badge">5</span>
                    </button>
                    
                    <!-- User Menu -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="header-user" onclick="toggleUserMenu()">
                            <div class="header-user-avatar">
                                @{
                                    var userNameHeader = User.Identity.Name ?? "U";
                                    var initialsHeader = userNameHeader.Length >= 2 ? userNameHeader.Substring(0, 2).ToUpper() : userNameHeader.ToUpper();
                                }
                                @initialsHeader
                            </div>
                            <div class="header-user-info">
                                <div class="header-user-name">@User.Identity.Name</div>
                                <div class="header-user-role">
                                    @if (User.IsInRole("Admin")) { <text>Admin</text> }
                                    @if (User.IsInRole("Manager")) { <text>Manager</text> }
                                    @if (User.IsInRole("Teacher")) { <text>Teacher</text> }
                                    @if (User.IsInRole("Student")) { <text>Student</text> }
                                </div>
                            </div>
                            <i class="fas fa-chevron-down text-muted"></i>
                        </div>
                        
                        <!-- User Dropdown -->
                        <div class="user-dropdown" id="userDropdown">
                            <a href="@Url.Action("Index", "StudentProfile")" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                <span>Hồ sơ</span>
                            </a>
                            <a href="@Url.Action("Settings", "Account")" class="dropdown-item">
                                <i class="fas fa-cog"></i>
                                <span>Cài đặt</span>
                            </a>
                            <hr class="dropdown-divider" />
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="dropdown-item logout-form">
                                <button type="submit" class="btn-logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Đăng xuất</span>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </header>
            
            <!-- Page Content -->
            <div class="page-content">
                <!-- Page Header -->
                @if (ViewData["Title"] != null)
                {
                    <div class="page-header mb-6">
                        <h1 class="text-2xl font-bold text-primary">@ViewData["Title"]</h1>
                        @if (ViewData["Subtitle"] != null)
                        {
                            <p class="text-secondary mt-1">@ViewData["Subtitle"]</p>
                        }
                    </div>
                }
                
                <!-- Flash Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mb-4">
                        <i class="fas fa-check-circle"></i>
                        <span>@TempData["SuccessMessage"]</span>
                        <button onclick="this.parentElement.remove()" class="alert-close">&times;</button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-error mb-4">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@TempData["ErrorMessage"]</span>
                        <button onclick="this.parentElement.remove()" class="alert-close">&times;</button>
                    </div>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>@TempData["WarningMessage"]</span>
                        <button onclick="this.parentElement.remove()" class="alert-close">&times;</button>
                    </div>
                }
                
                <!-- Main Body Content -->
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <script>
        // Sidebar Toggle
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            
            if (window.innerWidth <= 1024) {
                sidebar.classList.toggle('open');
                overlay.classList.toggle('active');
            } else {
                sidebar.classList.toggle('collapsed');
                document.querySelector('.main-content').classList.toggle('sidebar-collapsed');
            }
        }
        
        // Dark Mode Toggle
        function toggleDarkMode() {
            document.body.classList.toggle('dark');
            const icon = document.getElementById('darkModeIcon');
            if (document.body.classList.contains('dark')) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
                localStorage.setItem('darkMode', 'true');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
                localStorage.setItem('darkMode', 'false');
            }
        }
        
        // Load dark mode preference
        if (localStorage.getItem('darkMode') === 'true') {
            document.body.classList.add('dark');
            document.getElementById('darkModeIcon').classList.replace('fa-moon', 'fa-sun');
        }
        
        // User Menu Toggle
        function toggleUserMenu() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('show');
        }
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.header-user')) {
                document.getElementById('userDropdown')?.classList.remove('show');
            }
        });
        
        // Notifications Toggle
        function toggleNotifications() {
            // Implement notification panel
            window.location.href = '@Url.Action("Index", "Notifications")';
        }
        
        // Messages Toggle
        function toggleMessages() {
            // Implement messages panel
        }
        
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.style.opacity = '0';
                setTimeout(function() { alert.remove(); }, 300);
            });
        }, 5000);
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
