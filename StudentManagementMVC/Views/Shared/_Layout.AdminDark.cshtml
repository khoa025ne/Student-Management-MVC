@{
    var isAdmin = User.IsInRole("Admin");
    var isManager = User.IsInRole("Manager");
    var userRole = isAdmin ? "Admin" : isManager ? "Manager" : "Staff";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var userName = User.Identity?.Name ?? "Administrator";
    var userInitials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : userName.ToUpper();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Bootstrap (for utilities) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Education Theme CSS -->
    <link rel="stylesheet" href="~/css/education-theme.css" asp-append-version="true" />
    
    <style>
        /* Dark Admin Layout */
        .admin-dark-layout {
            min-height: 100vh;
            display: flex;
            background: var(--edu-dark);
        }
        
        /* Sidebar */
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(180deg, #0D0B0B 0%, #1a1818 100%);
            display: flex;
            flex-direction: column;
            z-index: 1000;
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
        
        @@media (min-width: 1024px) {
            .admin-sidebar {
                transform: translateX(0);
            }
        }
        
        .admin-sidebar.show {
            transform: translateX(0);
        }
        
        /* Sidebar Brand */
        .sidebar-brand {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .sidebar-brand-icon {
            width: 48px;
            height: 48px;
            background: var(--edu-primary);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: white;
        }
        
        .sidebar-brand-text h1 {
            font-size: 1rem;
            font-weight: 700;
            color: white;
            margin: 0;
        }
        
        .sidebar-brand-text p {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
            margin: 0;
        }
        
        /* Sidebar Navigation */
        .sidebar-nav {
            flex: 1;
            padding: 1rem 0.75rem;
            overflow-y: auto;
        }
        
        .sidebar-nav::-webkit-scrollbar {
            width: 4px;
        }
        
        .sidebar-nav::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .sidebar-nav::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 2px;
        }
        
        .sidebar-nav-section {
            margin-bottom: 1.5rem;
        }
        
        .sidebar-nav-title {
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: rgba(255, 255, 255, 0.4);
            padding: 0 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .sidebar-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            border-radius: var(--radius-md);
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s ease;
            margin-bottom: 0.25rem;
        }
        
        .sidebar-link:hover {
            background: rgba(255, 255, 255, 0.05);
            color: white;
        }
        
        .sidebar-link.active {
            background: var(--edu-primary);
            color: white;
        }
        
        .sidebar-link i {
            width: 20px;
            font-size: 1rem;
            text-align: center;
        }
        
        /* Sidebar User */
        .sidebar-user {
            padding: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-user-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }
        
        .sidebar-user-avatar {
            width: 44px;
            height: 44px;
            border-radius: var(--radius-md);
            background: rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
        }
        
        .sidebar-user-details h4 {
            font-size: 0.875rem;
            font-weight: 600;
            color: white;
            margin: 0;
        }
        
        .sidebar-user-details p {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
            margin: 0;
        }
        
        .sidebar-logout {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            width: 100%;
            padding: 0.75rem;
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: var(--radius-md);
            color: #ef4444;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s;
        }
        
        .sidebar-logout:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }
        
        /* Main Content */
        .admin-main {
            flex: 1;
            margin-left: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #0D0B0B;
            transition: margin-left 0.3s ease;
        }
        
        @@media (min-width: 1024px) {
            .admin-main {
                margin-left: 280px;
            }
        }
        
        /* Admin Header */
        .admin-header {
            background: rgba(255, 255, 255, 0.02);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0 1.5rem;
            height: 72px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 100;
            backdrop-filter: blur(10px);
        }
        
        .admin-header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .admin-mobile-toggle {
            width: 44px;
            height: 44px;
            border-radius: var(--radius-md);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: white;
        }
        
        @@media (min-width: 1024px) {
            .admin-mobile-toggle {
                display: none;
            }
        }
        
        /* Dark Search */
        .admin-search {
            display: none;
            position: relative;
        }
        
        @@media (min-width: 768px) {
            .admin-search {
                display: block;
            }
        }
        
        .admin-search input {
            width: 300px;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-lg);
            font-size: 0.875rem;
            background: rgba(255, 255, 255, 0.05);
            color: white;
            transition: all 0.2s;
        }
        
        .admin-search input:focus {
            outline: none;
            border-color: var(--edu-primary);
            background: rgba(255, 255, 255, 0.08);
        }
        
        .admin-search input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }
        
        .admin-search i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.4);
        }
        
        .admin-header-right {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .admin-notification-btn {
            position: relative;
            width: 44px;
            height: 44px;
            border-radius: var(--radius-md);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            transition: all 0.2s;
        }
        
        .admin-notification-btn:hover {
            background: var(--edu-primary);
            border-color: var(--edu-primary);
        }
        
        .admin-user-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.75rem 0.375rem 0.375rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-lg);
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .admin-user-btn:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        
        .admin-user-avatar {
            width: 36px;
            height: 36px;
            border-radius: var(--radius-md);
            background: var(--edu-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: white;
            font-size: 0.875rem;
        }
        
        .admin-user-info {
            display: none;
        }
        
        @@media (min-width: 768px) {
            .admin-user-info {
                display: block;
                text-align: left;
            }
        }
        
        .admin-user-info span {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: white;
        }
        
        .admin-user-info small {
            display: block;
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.5);
        }
        
        /* Content Area */
        .admin-content {
            flex: 1;
            padding: 1.5rem;
        }
        
        @@media (min-width: 768px) {
            .admin-content {
                padding: 2rem;
            }
        }
        
        /* Override text colors for dark theme */
        .admin-content h1,
        .admin-content h2,
        .admin-content h3,
        .admin-content h4,
        .admin-content h5,
        .admin-content h6 {
            color: white;
        }
        
        .admin-content p {
            color: rgba(255, 255, 255, 0.6);
        }
        
        /* Dark Cards in Admin */
        .admin-content .edu-card {
            background: rgba(255, 255, 255, 0.03);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        .admin-content .edu-card:hover {
            background: rgba(255, 255, 255, 0.05);
        }
        
        .admin-content .edu-stat-card {
            background: rgba(255, 255, 255, 0.03);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        .admin-content .edu-stat-value {
            color: white;
        }
        
        .admin-content .edu-stat-label {
            color: rgba(255, 255, 255, 0.5);
        }
        
        .admin-content .edu-stat-icon {
            background: rgba(23, 81, 239, 0.2);
        }
        
        /* Dark Table */
        .admin-content .edu-table thead th {
            background: rgba(255, 255, 255, 0.05);
            color: rgba(255, 255, 255, 0.6);
            border-bottom-color: rgba(255, 255, 255, 0.1);
        }
        
        .admin-content .edu-table tbody td {
            color: rgba(255, 255, 255, 0.8);
            border-bottom-color: rgba(255, 255, 255, 0.05);
        }
        
        .admin-content .edu-table tbody tr:hover {
            background: rgba(255, 255, 255, 0.03);
        }
        
        .admin-content .edu-table tbody tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.02);
        }
        
        /* Sidebar Overlay (Mobile) */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        
        .sidebar-overlay.show {
            opacity: 1;
            visibility: visible;
        }
        
        /* Dropdown in dark mode */
        .dropdown-menu {
            background: #1a1818;
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        .dropdown-item {
            color: rgba(255, 255, 255, 0.8);
        }
        
        .dropdown-item:hover {
            background: rgba(255, 255, 255, 0.05);
            color: white;
        }
        
        .dropdown-divider {
            border-color: rgba(255, 255, 255, 0.1);
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-dark-layout">
        <!-- Sidebar Overlay (Mobile) -->
        <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
        
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <!-- Brand -->
            <div class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="sidebar-brand-text">
                    <h1>@(isAdmin ? "Admin Panel" : "Manager Panel")</h1>
                    <p>Quản lý hệ thống</p>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="sidebar-nav">
                <!-- Main Menu -->
                <div class="sidebar-nav-section">
                    <div class="sidebar-nav-title">Menu chính</div>
                    
                    @if (isAdmin)
                    {
                        <a asp-controller="Dashboard" asp-action="Index" 
                           class="sidebar-link @(currentController == "Dashboard" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                        <a asp-controller="Home" asp-action="Index" 
                           class="sidebar-link @(currentController == "Home" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    }
                    @if (isManager)
                    {
                        <a asp-controller="Home" asp-action="Index" 
                           class="sidebar-link @(currentController == "Home" ? "active" : "")">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Quản lý học vụ</span>
                        </a>
                    }
                </div>

                <!-- User Management -->
                @if (isAdmin)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Quản lý người dùng</div>
                        <a asp-controller="Users" asp-action="Index" 
                           class="sidebar-link @(currentController == "Users" ? "active" : "")">
                            <i class="fas fa-users-cog"></i>
                            <span>Tài khoản</span>
                        </a>
                        <a asp-controller="Students" asp-action="Index" 
                           class="sidebar-link @(currentController == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                    </div>
                }
                @if (isManager)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Quản lý sinh viên</div>
                        <a asp-controller="Students" asp-action="Index" 
                           class="sidebar-link @(currentController == "Students" ? "active" : "")">
                            <i class="fas fa-user-graduate"></i>
                            <span>Sinh viên</span>
                        </a>
                    </div>
                }

                <!-- Academic Management -->
                <div class="sidebar-nav-section">
                    <div class="sidebar-nav-title">Quản lý đào tạo</div>
                    
                    @if (isAdmin)
                    {
                        <a asp-controller="Semesters" asp-action="Index" 
                           class="sidebar-link @(currentController == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                        <a asp-controller="Courses" asp-action="Index" 
                           class="sidebar-link @(currentController == "Courses" ? "active" : "")">
                            <i class="fas fa-book"></i>
                            <span>Môn học</span>
                        </a>
                    }
                    @if (isManager)
                    {
                        <a asp-controller="Semesters" asp-action="Index" 
                           class="sidebar-link @(currentController == "Semesters" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Học kỳ</span>
                        </a>
                    }
                    <a asp-controller="Classes" asp-action="Index" 
                       class="sidebar-link @(currentController == "Classes" && currentAction != "MyClasses" ? "active" : "")">
                        <i class="fas fa-chalkboard"></i>
                        <span>Lớp học</span>
                    </a>
                    <a asp-controller="EnrollmentGrades" asp-action="Index" 
                       class="sidebar-link @(currentController == "EnrollmentGrades" ? "active" : "")">
                        <i class="fas fa-edit"></i>
                        <span>Nhập điểm</span>
                    </a>
                </div>

                <!-- Reports & Tools -->
                @if (isAdmin)
                {
                    <div class="sidebar-nav-section">
                        <div class="sidebar-nav-title">Báo cáo & Công cụ</div>
                        <a asp-controller="AcademicAnalysis" asp-action="Index" 
                           class="sidebar-link @(currentController == "AcademicAnalysis" ? "active" : "")">
                            <i class="fas fa-chart-bar"></i>
                            <span>Phân tích học tập</span>
                        </a>
                        <a asp-controller="AIKnowledge" asp-action="Index" 
                           class="sidebar-link @(currentController == "AIKnowledge" ? "active" : "")">
                            <i class="fas fa-robot"></i>
                            <span>AI Knowledge</span>
                        </a>
                        <a asp-controller="Notifications" asp-action="Create" 
                           class="sidebar-link @(currentController == "Notifications" && currentAction == "Create" ? "active" : "")">
                            <i class="fas fa-bullhorn"></i>
                            <span>Gửi thông báo</span>
                        </a>
                    </div>
                }
            </nav>

            <!-- User Section -->
            <div class="sidebar-user">
                <div class="sidebar-user-info">
                    <div class="sidebar-user-avatar">@userInitials</div>
                    <div class="sidebar-user-details">
                        <h4>@userName</h4>
                        <p>@userRole</p>
                    </div>
                </div>
                <a asp-controller="Auth" asp-action="Logout" class="sidebar-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Header -->
            <header class="admin-header">
                <div class="admin-header-left">
                    <button class="admin-mobile-toggle" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="admin-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Tìm kiếm..." />
                    </div>
                </div>

                <div class="admin-header-right">
                    <!-- Notifications -->
                    <a asp-controller="Notifications" asp-action="Create" class="admin-notification-btn" title="Gửi thông báo">
                        <i class="fas fa-bell"></i>
                    </a>

                    <!-- User Menu -->
                    <div class="dropdown">
                        <button class="admin-user-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="admin-user-avatar">@userInitials</div>
                            <div class="admin-user-info">
                                <span>@userName</span>
                                <small>@userRole</small>
                            </div>
                            <i class="fas fa-chevron-down ms-2" style="font-size: 0.7rem; color: rgba(255,255,255,0.5);"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword">
                                    <i class="fas fa-key me-2"></i> Đổi mật khẩu
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <div class="admin-content">
                <!-- Flash Messages -->
                <partial name="_Notifications" />
                
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
            document.body.style.overflow = sidebar.classList.contains('show') ? 'hidden' : '';
        }
        
        // Close sidebar on escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('adminSidebar');
                if (sidebar.classList.contains('show')) {
                    toggleSidebar();
                }
            }
        });
        
        // Close sidebar on window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 1024) {
                const sidebar = document.getElementById('adminSidebar');
                const overlay = document.getElementById('sidebarOverlay');
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
                document.body.style.overflow = '';
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
