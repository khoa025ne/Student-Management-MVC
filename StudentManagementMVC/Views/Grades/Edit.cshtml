@model DataAccess.Entities.Score

@{
    ViewData["Title"] = "Chỉnh sửa Điểm";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Cập nhật Điểm số</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin Điểm</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ScoreId" />
                
                <div class="form-group">
                    <label asp-for="StudentId" class="control-label">Sinh viên</label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Môn học (ID)</label>
                    <!-- Tạm thời dùng input nếu Course SelectList chưa load name đẹp -->
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select> 
                     <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ScoreValue" class="control-label">Điểm số</label>
                    <input asp-for="ScoreValue" class="form-control" type="number" step="0.1" min="0" max="10" />
                    <span asp-validation-for="ScoreValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
