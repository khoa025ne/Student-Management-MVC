@model IEnumerable<DataAccess.Entities.Semester>

@{
    ViewData["Title"] = "Quản lý Học kỳ";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Học kỳ</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm Học kỳ
        </a>
    </div>

    <partial name="_Notifications" />

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách Học kỳ</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Học kỳ</th>
                            <th>Mã Học kỳ</th>
                            <th>Ngày Bắt đầu</th>
                            <th>Ngày Kết thúc</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SemesterName</td>
                                <td>@item.SemesterCode</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@item.EndDate.ToShortDateString()</td>
                                <td>
                                    @if(item.IsActive)
                                    {
                                        <span class="badge badge-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Không hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SemesterId" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SemesterId" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
