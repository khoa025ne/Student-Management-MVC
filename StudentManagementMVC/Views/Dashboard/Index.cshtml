@section Scripts {
<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
    // Score Distribution Chart
    const scoreCtx = document.getElementById('scoreDistributionChart');
    const scoreChart = new Chart(scoreCtx, {
        type: 'doughnut',
        data: {
            labels: ['Xu·∫•t s·∫Øc (9-10)', 'Gi·ªèi (8-8.9)', 'Kh√° (7-7.9)', 'Trung b√¨nh (5.5-6.9)', 'Y·∫øu (4-5.4)', 'K√©m (<4)'],
            datasets: [{
                data: [@Model.ScoreStats.Excellent, @Model.ScoreStats.VeryGood, @Model.ScoreStats.Good, 
                       @Model.ScoreStats.Average, @Model.ScoreStats.BelowAverage, @Model.ScoreStats.Poor],
                backgroundColor: [
                    '#28a745',
                    '#17a2b8',
                    '#ffc107',
                    '#fd7e14',
                    '#dc3545',
                    '#6c757d'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 15,
                        font: { size: 12 }
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.label || '';
                            let value = context.parsed || 0;
                            let total = context.dataset.data.reduce((a, b) => a + b, 0);
                            let percentage = ((value / total) * 100).toFixed(1);
                            return label + ': ' + value + ' (' + percentage + '%)';
                        }
                    }
                }
            }
        }
    });

