@model Services.Models.StudentDashboardDto

@{
    ViewData["Title"] = "Trang ch·ªß Sinh vi√™n";
    Layout = "~/Views/Shared/_Layout.Education.cshtml";
}

@section Styles {
    <style>
        /* Hero Section */
        .edu-student-hero {
            position: relative;
            padding: var(--space-2xl) var(--space-xl);
            border-radius: var(--radius-2xl);
            overflow: hidden;
            margin-bottom: var(--space-xl);
        }
        
        .edu-student-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, #1751EF 0%, #4B7BF5 50%, #0EA5E9 100%);
            z-index: 0;
        }
        
        .edu-student-hero::after {
            content: '';
            position: absolute;
            right: -100px;
            top: -100px;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
            border-radius: 50%;
        }
        
        .edu-hero-inner {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            gap: var(--space-xl);
        }
        
        @@media (min-width: 1024px) {
            .edu-hero-inner {
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
            }
        }
        
        .edu-hero-profile {
            display: flex;
            align-items: center;
            gap: var(--space-lg);
        }
        
        .edu-hero-avatar {
            width: 88px;
            height: 88px;
            background: rgba(255, 255, 255, 0.2);
            border: 3px solid rgba(255, 255, 255, 0.4);
            border-radius: var(--radius-xl);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: 700;
            color: white;
            backdrop-filter: blur(10px);
        }
        
        .edu-hero-greeting {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.875rem;
            margin-bottom: var(--space-xs);
        }
        
        .edu-hero-name {
            color: white;
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: var(--space-sm);
        }
        
        .edu-hero-badges {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-sm);
        }
        
        .edu-hero-badge {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            padding: 0.375rem 0.875rem;
            border-radius: var(--radius-full);
            font-size: 0.8125rem;
            color: white;
            display: flex;
            align-items: center;
            gap: var(--space-xs);
        }
        
        .edu-hero-actions {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-sm);
        }
        
        .edu-hero-btn {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 0.625rem 1.25rem;
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: var(--space-sm);
            transition: all 0.2s ease;
            backdrop-filter: blur(10px);
        }
        
        .edu-hero-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
            transform: translateY(-2px);
        }
        
        /* Floating Cards on Hero */
        .edu-floating-cards {
            position: absolute;
            right: var(--space-xl);
            top: 50%;
            transform: translateY(-50%);
            display: none;
            flex-direction: column;
            gap: var(--space-md);
            z-index: 2;
        }
        
        @@media (min-width: 1280px) {
            .edu-floating-cards {
                display: flex;
            }
        }
        
        .edu-float-card {
            background: white;
            padding: var(--space-md) var(--space-lg);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-xl);
            display: flex;
            align-items: center;
            gap: var(--space-md);
            animation: float 3s ease-in-out infinite;
        }
        
        .edu-float-card:nth-child(2) {
            animation-delay: 1.5s;
        }
        
        .edu-float-card-icon {
            width: 44px;
            height: 44px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: white;
        }
        
        .edu-float-card-icon.primary {
            background: var(--edu-primary);
        }
        
        .edu-float-card-icon.accent {
            background: var(--edu-accent);
        }
        
        .edu-float-card-text strong {
            display: block;
            font-size: 0.9375rem;
            color: var(--edu-dark);
        }
        
        .edu-float-card-text span {
            font-size: 0.75rem;
            color: var(--edu-gray);
        }
        
        /* Warning Alert */
        .edu-warning-alert {
            background: linear-gradient(135deg, #FEF2F2, #FEE2E2);
            border: 1px solid #FECACA;
            border-left: 4px solid var(--edu-accent);
            border-radius: var(--radius-lg);
            padding: var(--space-md) var(--space-lg);
            display: flex;
            align-items: center;
            gap: var(--space-md);
            margin-bottom: var(--space-xl);
        }
        
        .edu-warning-icon {
            width: 48px;
            height: 48px;
            background: var(--edu-accent);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            flex-shrink: 0;
        }
        
        .edu-warning-content {
            flex: 1;
        }
        
        .edu-warning-title {
            font-weight: 600;
            color: var(--edu-accent);
            margin-bottom: 2px;
        }
        
        .edu-warning-text {
            font-size: 0.875rem;
            color: var(--edu-gray);
            margin: 0;
        }
        
        /* Stats Grid */
        .edu-stats-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--space-md);
            margin-bottom: var(--space-xl);
        }
        
        @@media (min-width: 1024px) {
            .edu-stats-container {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        
        .edu-stat-box {
            background: var(--edu-card-bg);
            border: 1px solid var(--edu-card-border);
            border-radius: var(--radius-lg);
            padding: var(--space-lg);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .edu-stat-box:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-card-hover);
        }
        
        .edu-stat-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
        }
        
        .edu-stat-box.gpa::before { background: var(--edu-primary); }
        .edu-stat-box.credits::before { background: var(--edu-success); }
        .edu-stat-box.current::before { background: var(--edu-info); }
        .edu-stat-box.progress::before { background: var(--edu-accent); }
        
        .edu-stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: var(--space-sm);
        }
        
        .edu-stat-label {
            font-size: 0.8125rem;
            color: var(--edu-gray);
            margin-bottom: var(--space-xs);
        }
        
        .edu-stat-number {
            font-family: var(--font-display);
            font-size: 2rem;
            font-weight: 800;
            line-height: 1;
        }
        
        .edu-stat-number.primary { color: var(--edu-primary); }
        .edu-stat-number.success { color: var(--edu-success); }
        .edu-stat-number.info { color: var(--edu-info); }
        .edu-stat-number.accent { color: var(--edu-accent); }
        
        .edu-stat-subtitle {
            font-size: 0.75rem;
            color: var(--edu-gray);
            margin-top: var(--space-xs);
        }
        
        .edu-stat-icon-box {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }
        
        .edu-stat-icon-box.primary {
            background: rgba(23, 81, 239, 0.1);
            color: var(--edu-primary);
        }
        
        .edu-stat-icon-box.success {
            background: rgba(34, 197, 94, 0.1);
            color: var(--edu-success);
        }
        
        .edu-stat-icon-box.info {
            background: rgba(14, 165, 233, 0.1);
            color: var(--edu-info);
        }
        
        .edu-stat-icon-box.accent {
            background: rgba(161, 84, 60, 0.1);
            color: var(--edu-accent);
        }
        
        /* Progress Bar in Stat */
        .edu-stat-progress {
            margin-top: var(--space-sm);
            height: 6px;
            background: var(--edu-muted);
            border-radius: var(--radius-full);
            overflow: hidden;
        }
        
        .edu-stat-progress-fill {
            height: 100%;
            background: var(--gradient-accent);
            border-radius: var(--radius-full);
            transition: width 0.5s ease;
        }
        
        /* Content Grid */
        .edu-content-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: var(--space-lg);
        }
        
        @@media (min-width: 1024px) {
            .edu-content-grid {
                grid-template-columns: 5fr 7fr;
            }
            
            .edu-content-grid.reverse {
                grid-template-columns: 7fr 5fr;
            }
        }
        
        /* Card Styles */
        .edu-content-card {
            background: var(--edu-card-bg);
            border: 1px solid var(--edu-card-border);
            border-radius: var(--radius-xl);
            overflow: hidden;
        }
        
        .edu-content-header {
            background: var(--edu-dark);
            color: white;
            padding: var(--space-md) var(--space-lg);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .edu-content-header.primary {
            background: var(--gradient-primary);
        }
        
        .edu-content-header.accent {
            background: var(--gradient-accent);
        }
        
        .edu-content-title {
            display: flex;
            align-items: center;
            gap: var(--space-sm);
            font-size: 1rem;
            font-weight: 600;
            margin: 0;
            color: white;
        }
        
        .edu-content-link {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.8125rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: var(--space-xs);
            transition: color 0.2s;
        }
        
        .edu-content-link:hover {
            color: white;
        }
        
        .edu-content-body {
            padding: var(--space-lg);
        }
        
        /* Schedule Item */
        .edu-schedule-list {
            display: flex;
            flex-direction: column;
            gap: var(--space-sm);
        }
        
        .edu-schedule-item {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            padding: var(--space-md);
            background: var(--edu-muted);
            border-radius: var(--radius-md);
            border-left: 4px solid var(--edu-primary);
            transition: all 0.2s ease;
        }
        
        .edu-schedule-item:hover {
            background: var(--edu-card-border);
        }
        
        .edu-schedule-time {
            min-width: 70px;
            padding: var(--space-sm);
            background: var(--edu-primary);
            color: white;
            border-radius: var(--radius-sm);
            text-align: center;
            font-weight: 600;
            font-size: 0.8125rem;
        }
        
        .edu-schedule-info h6 {
            font-size: 0.9375rem;
            font-weight: 600;
            color: var(--edu-dark);
            margin-bottom: 2px;
        }
        
        .edu-schedule-info span {
            font-size: 0.8125rem;
            color: var(--edu-gray);
        }
        
        /* Empty State */
        .edu-empty-state {
            text-align: center;
            padding: var(--space-2xl);
        }
        
        .edu-empty-state i {
            font-size: 3rem;
            color: var(--edu-card-border);
            margin-bottom: var(--space-md);
        }
        
        .edu-empty-state h6 {
            color: var(--edu-gray);
            font-weight: 500;
            margin-bottom: var(--space-xs);
        }
        
        .edu-empty-state p {
            font-size: 0.875rem;
        }
        
        /* Score Table */
        .edu-score-table {
            width: 100%;
        }
        
        .edu-score-table thead th {
            padding: var(--space-md);
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--edu-gray);
            background: var(--edu-muted);
            border: none;
        }
        
        .edu-score-table tbody td {
            padding: var(--space-md);
            border-bottom: 1px solid var(--edu-card-border);
            vertical-align: middle;
        }
        
        .edu-score-table tbody tr:hover {
            background: var(--edu-muted);
        }
        
        .edu-course-name {
            font-weight: 600;
            color: var(--edu-dark);
            font-size: 0.9375rem;
        }
        
        .edu-course-code {
            font-size: 0.75rem;
            color: var(--edu-gray);
        }
        
        .edu-grade-badge {
            padding: 0.25rem 0.75rem;
            border-radius: var(--radius-full);
            font-weight: 600;
            font-size: 0.8125rem;
        }
        
        .edu-grade-badge.A { background: var(--edu-success-light); color: var(--edu-success); }
        .edu-grade-badge.B { background: rgba(23, 81, 239, 0.1); color: var(--edu-primary); }
        .edu-grade-badge.C { background: var(--edu-info-light); color: #0369A1; }
        .edu-grade-badge.D { background: var(--edu-warning-light); color: #92400E; }
        .edu-grade-badge.F { background: var(--edu-danger-light); color: var(--edu-danger); }
        
        /* Grade Distribution */
        .edu-grade-bar {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            padding: var(--space-sm) 0;
        }
        
        .edu-grade-label {
            width: 36px;
            height: 36px;
            border-radius: var(--radius-sm);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
            font-size: 0.875rem;
        }
        
        .edu-grade-label.A { background: var(--edu-success); }
        .edu-grade-label.B { background: var(--edu-primary); }
        .edu-grade-label.C { background: var(--edu-info); }
        .edu-grade-label.D { background: var(--edu-warning); }
        .edu-grade-label.F { background: var(--edu-danger); }
        
        .edu-grade-track {
            flex: 1;
            height: 10px;
            background: var(--edu-muted);
            border-radius: var(--radius-full);
            overflow: hidden;
        }
        
        .edu-grade-fill {
            height: 100%;
            border-radius: var(--radius-full);
            transition: width 0.5s ease;
        }
        
        .edu-grade-fill.A { background: var(--edu-success); }
        .edu-grade-fill.B { background: var(--edu-primary); }
        .edu-grade-fill.C { background: var(--edu-info); }
        .edu-grade-fill.D { background: var(--edu-warning); }
        .edu-grade-fill.F { background: var(--edu-danger); }
        
        .edu-grade-count {
            min-width: 30px;
            text-align: right;
            font-weight: 600;
            color: var(--edu-dark);
        }
        
        /* Quick Actions Grid */
        .edu-actions-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--space-md);
        }
        
        @@media (min-width: 768px) {
            .edu-actions-grid {
                grid-template-columns: repeat(6, 1fr);
            }
        }
        
        .edu-action-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: var(--space-lg);
            background: var(--edu-muted);
            border-radius: var(--radius-lg);
            text-decoration: none;
            transition: all 0.3s ease;
            border: 1px solid transparent;
            position: relative;
        }
        
        .edu-action-item:hover {
            transform: translateY(-4px);
            background: white;
            border-color: var(--edu-primary);
            box-shadow: var(--shadow-md);
        }
        
        .edu-action-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: var(--space-sm);
            font-size: 1.25rem;
            color: white;
        }
        
        .edu-action-item span {
            font-size: 0.8125rem;
            font-weight: 500;
            color: var(--edu-dark);
            text-align: center;
        }
        
        .edu-action-badge {
            position: absolute;
            top: 8px;
            right: 12px;
            min-width: 18px;
            height: 18px;
            background: var(--edu-danger);
            color: white;
            font-size: 0.7rem;
            font-weight: 600;
            border-radius: 9999px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 4px;
        }
        
        /* Animation */
        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
    </style>
}

