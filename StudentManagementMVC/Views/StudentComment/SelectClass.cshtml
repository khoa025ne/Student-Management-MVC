@model IEnumerable<Services.Models.ClassDto>

@{
    ViewData["Title"] = "Nhận Xét Sinh Viên - Chọn Lớp";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-users"></i> Nhận Xét Sinh Viên - Chọn Lớp Học</h4>
                </div>
                <div class="card-body">
                    <partial name="_Notifications" />

                    @if (Model.Any())
                    {
                        <div class="row g-3">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.CourseName</h5>
                                            <p class="text-muted mb-2">
                                                <small>
                                                    <strong>@item.ClassCode</strong> - @item.ClassName
                                                </small>
                                            </p>

                                            <p class="mb-2">
                                                <i class="fas fa-calendar-alt text-muted"></i>
                                                <small>@item.SemesterName</small>
                                            </p>

                                            <p class="mb-3">
                                                <i class="fas fa-users text-muted"></i>
                                                <small>
                                                    Sĩ số: <strong>@item.CurrentEnrollment</strong>
                                                </small>
                                            </p>

                                            <a href="@Url.Action("ClassStudents", "StudentComment", new { classId = item.ClassId })" 
                                               class="btn btn-primary w-100">
                                                <i class="fas fa-arrow-right"></i> Xem Sinh Viên
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-inbox"></i> Bạn chưa có lớp học nào được giao.
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
