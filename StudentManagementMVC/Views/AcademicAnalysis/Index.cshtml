                                        </span>
                                    </td>
                                    <td>
                                        @if (strongSubjects != null && strongSubjects.Any())
                                        {
                                            <small>@string.Join(", ", strongSubjects.Take(2))</small>
                                            @if (strongSubjects.Length > 2)
                                            {
                                                <span class="badge bg-info">+@(strongSubjects.Length - 2)</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (weakSubjects != null && weakSubjects.Any())
                                        {
                                            <small>@string.Join(", ", weakSubjects.Take(2))</small>
                                            @if (weakSubjects.Length > 2)
                                            {
                                                <span class="badge bg-warning">+@(weakSubjects.Length - 2)</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td><span class="badge bg-secondary">@item.AiModelUsed</span></td>
