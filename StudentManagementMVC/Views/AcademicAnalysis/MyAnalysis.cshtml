@model IEnumerable<Services.Models.AcademicAnalysisDto>
@{
    ViewData["Title"] = "Phân tích học tập của tôi";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1 fw-bold" style="font-family: var(--font-display);">
                <i class="fas fa-chart-line text-primary me-2"></i>Phân tích học tập
            </h1>
            <p class="text-muted mb-0">Xem phân tích AI về kết quả học tập của bạn</p>
        </div>
        <form asp-action="GenerateGpaAnalysis" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-robot me-2"></i>Tạo phân tích mới
            </button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Latest Analysis Summary -->
        var latest = Model.OrderByDescending(a => a.AnalysisDate).First();
        var strongSubjectsLatest = latest.StrongSubjects ?? new List<string>();
        var weakSubjectsLatest = latest.WeakSubjects ?? new List<string>();
        
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold">
                                <i class="fas fa-brain text-primary me-2"></i>Phân tích gần nhất
                            </h5>
                            <span class="badge bg-primary-subtle text-primary px-3 py-2">
                                @latest.AnalysisDate.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="text-center p-4 rounded" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(139, 92, 246, 0.1));">
                                    <div class="mb-2">
                                        <i class="fas fa-graduation-cap fa-2x text-primary"></i>
                                    </div>
                                    <h2 class="fw-bold mb-1" style="color: var(--primary);">@latest.OverallGPA.ToString("F2")</h2>
                                    <p class="text-muted mb-0">GPA Tổng</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="h-100 p-3 rounded border" style="border-color: #22c55e !important;">
                                    <h6 class="fw-bold text-success mb-3">
                                        <i class="fas fa-thumbs-up me-2"></i>Môn mạnh
                                    </h6>
                                    @if (strongSubjectsLatest != null && strongSubjectsLatest.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var subject in strongSubjectsLatest.Take(3))
                                            {
                                                <span class="badge bg-success-subtle text-success">@subject</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Chưa xác định</span>
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="h-100 p-3 rounded border" style="border-color: #f59e0b !important;">
                                    <h6 class="fw-bold text-warning mb-3">
                                        <i class="fas fa-exclamation-circle me-2"></i>Cần cải thiện
                                    </h6>
                                    @if (weakSubjectsLatest != null && weakSubjectsLatest.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var subject in weakSubjectsLatest.Take(3))
                                            {
                                                <span class="badge bg-warning-subtle text-warning">@subject</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Không có</span>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(latest.Recommendations))
                        {
                            <div class="mt-4 p-3 rounded" style="background: rgba(37, 99, 235, 0.05);">
                                <h6 class="fw-bold mb-3">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>Gợi ý từ AI
                                </h6>
                                <p class="mb-0 text-muted" style="white-space: pre-line;">@latest.Recommendations</p>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent py-3">
                        <small class="text-muted">
                            <i class="fas fa-robot me-1"></i>Phân tích bởi: @latest.AiModelUsed
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-history text-primary me-2"></i>Lịch sử GPA
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var analysis in Model.OrderByDescending(a => a.AnalysisDate).Take(5))
                        {
                            var gpaColor = analysis.OverallGPA >= 8.0 ? "#22c55e" : analysis.OverallGPA >= 6.5 ? "#2563eb" : analysis.OverallGPA >= 5.0 ? "#f59e0b" : "#ef4444";
                            <div class="d-flex align-items-center justify-content-between py-2 border-bottom">
                                <div>
                                    <span class="text-muted small">@analysis.AnalysisDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="fw-bold" style="color: @gpaColor;">
                                    @analysis.OverallGPA.ToString("F2")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Analysis History -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-list text-primary me-2"></i>Tất cả phân tích (@Model.Count())
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="py-3">Ngày phân tích</th>
                                <th class="py-3 text-center">GPA</th>
                                <th class="py-3">Môn mạnh</th>
                                <th class="py-3">Cần cải thiện</th>
                                <th class="py-3">Model AI</th>
                                <th class="py-3 text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var analysis in Model.OrderByDescending(a => a.AnalysisDate))
                            {
                                var strongSubjects = analysis.StrongSubjects ?? new List<string>();
                                var weakSubjects = analysis.WeakSubjects ?? new List<string>();
                                
                                <tr>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="rounded-circle p-2" style="background: rgba(37, 99, 235, 0.1);">
                                                <i class="fas fa-calendar-alt text-primary small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-medium">@analysis.AnalysisDate.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">@analysis.AnalysisDate.ToString("HH:mm")</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 text-center">
                                        @{
                                            var gpaBadgeClass = analysis.OverallGPA >= 8.0 ? "bg-success" : 
                                                               analysis.OverallGPA >= 6.5 ? "bg-primary" : 
                                                               analysis.OverallGPA >= 5.0 ? "bg-warning text-dark" : "bg-danger";
                                        }
                                        <span class="badge @gpaBadgeClass px-3 py-2 fs-6">@analysis.OverallGPA.ToString("F2")</span>
                                    </td>
                                    <td class="py-3">
                                        @if (strongSubjects.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var subject in strongSubjects.Take(2))
                                                {
                                                    <span class="badge bg-success-subtle text-success small">@subject</span>
                                                }
                                                @if (strongSubjects.Count > 2)
                                                {
                                                    <span class="badge bg-light text-muted small">+@(strongSubjects.Count - 2)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="py-3">
                                        @if (weakSubjects.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var subject in weakSubjects.Take(2))
                                                {
                                                    <span class="badge bg-warning-subtle text-warning small">@subject</span>
                                                }
                                                @if (weakSubjects.Count > 2)
                                                {
                                                    <span class="badge bg-light text-muted small">+@(weakSubjects.Count - 2)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="py-3">
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-robot me-1"></i>@analysis.AiModelUsed
                                        </span>
                                    </td>
                                    <td class="py-3 text-center">
                                        <a asp-controller="AcademicAnalysis" asp-action="Details" asp-route-id="@analysis.AnalysisId" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-chart-line fa-4x text-muted"></i>
                </div>
                <h4 class="fw-bold mb-2">Chưa có phân tích nào</h4>
                <p class="text-muted mb-4">Hãy tạo phân tích học tập đầu tiên của bạn để nhận được gợi ý từ AI.</p>
                <form asp-action="GenerateGpaAnalysis" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-robot me-2"></i>Tạo phân tích đầu tiên
                    </button>
                </form>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .bg-primary-subtle {
            background-color: rgba(37, 99, 235, 0.1) !important;
        }
        .bg-success-subtle {
            background-color: rgba(34, 197, 94, 0.1) !important;
        }
        .bg-warning-subtle {
            background-color: rgba(245, 158, 11, 0.1) !important;
        }
    </style>
}
