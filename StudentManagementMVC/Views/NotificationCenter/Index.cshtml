@model Services.Models.NotificationCenterDto

@{
    ViewData["Title"] = "Trung tâm thông báo";
    ViewData["Subtitle"] = $"{Model.UnreadCount} thông báo chưa đọc";
    Layout = "~/Views/Shared/_LayoutTailAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <style>
        .notification-header {
            background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
            border-radius: var(--radius-xl);
            padding: 32px;
            color: white;
            margin-bottom: 24px;
        }
        .notification-stats {
            display: flex;
            gap: 24px;
            margin-top: 16px;
        }
        .notification-stat {
            background: rgba(255,255,255,0.2);
            padding: 12px 20px;
            border-radius: var(--radius-lg);
        }
        .notification-stat-value {
            font-size: 24px;
            font-weight: 700;
        }
        .notification-stat-label {
            font-size: 13px;
            opacity: 0.9;
        }
        .notification-filters {
            background: var(--bg-secondary);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-lg);
            padding: 16px 20px;
            margin-bottom: 24px;
            display: flex;
            gap: 16px;
            align-items: center;
            flex-wrap: wrap;
        }
        .filter-chip {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: 1px solid var(--border-primary);
            background: var(--bg-secondary);
            color: var(--text-secondary);
        }
        .filter-chip:hover, .filter-chip.active {
            background: var(--brand-500);
            color: white;
            border-color: var(--brand-500);
        }
        .notification-list {
            background: var(--bg-secondary);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-xl);
            overflow: hidden;
        }
        .notification-item {
            display: flex;
            gap: 16px;
            padding: 20px 24px;
            border-bottom: 1px solid var(--border-primary);
            transition: background 0.2s;
            cursor: pointer;
        }
        .notification-item:hover {
            background: var(--gray-50);
        }
        .notification-item:last-child {
            border-bottom: none;
        }
        .notification-item.unread {
            background: rgba(70, 95, 255, 0.03);
            border-left: 4px solid var(--brand-500);
        }
        .notification-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            flex-shrink: 0;
        }
        .notification-icon.info { background: #dbeafe; color: #2563eb; }
        .notification-icon.warning { background: #fef3c7; color: #d97706; }
        .notification-icon.success { background: #dcfce7; color: #16a34a; }
        .notification-icon.error { background: #fee2e2; color: #dc2626; }
        .notification-icon.academic { background: #e0e7ff; color: #4f46e5; }
        .notification-icon.system { background: #f3f4f6; color: #6b7280; }
        .notification-content {
            flex: 1;
            min-width: 0;
        }
        .notification-title {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .notification-title .badge {
            font-size: 10px;
            padding: 2px 8px;
        }
        .notification-message {
            font-size: 14px;
            color: var(--text-secondary);
            line-height: 1.5;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .notification-meta {
            margin-top: 8px;
            font-size: 12px;
            color: var(--text-tertiary);
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .notification-actions {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-end;
        }
        .mark-read-btn {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            border: 2px solid var(--brand-300);
            background: transparent;
            cursor: pointer;
            transition: all 0.2s;
        }
        .mark-read-btn:hover {
            background: var(--brand-500);
            border-color: var(--brand-500);
        }
        .mark-read-btn.read {
            background: var(--brand-500);
            border-color: var(--brand-500);
        }
        .mark-read-btn.read::after {
            content: '✓';
            color: white;
            font-size: 12px;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
        }
        .empty-state i {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.5;
        }
        .pagination-container {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 24px;
        }
        .page-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: var(--radius-md);
            border: 1px solid var(--border-primary);
            background: var(--bg-secondary);
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.2s;
        }
        .page-btn:hover, .page-btn.active {
            background: var(--brand-500);
            color: white;
            border-color: var(--brand-500);
        }
    </style>
}

<!-- Header -->
<div class="notification-header">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold mb-2">
                <i class="fas fa-bell mr-2"></i>Trung tâm thông báo
            </h1>
            <p class="opacity-90">Quản lý tất cả thông báo của bạn</p>
        </div>
        <div class="notification-stats">
            <div class="notification-stat">
                <div class="notification-stat-value">@Model.TotalCount</div>
                <div class="notification-stat-label">Tổng số</div>
            </div>
            <div class="notification-stat">
                <div class="notification-stat-value">@Model.UnreadCount</div>
                <div class="notification-stat-label">Chưa đọc</div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="notification-filters">
    <span class="text-secondary text-sm font-semibold mr-2">Lọc:</span>
    <a href="@Url.Action("Index")" class="filter-chip @(string.IsNullOrEmpty(Model.CurrentFilter) && !Model.UnreadOnly ? "active" : "")">
        <i class="fas fa-inbox"></i> Tất cả
    </a>
    <a href="@Url.Action("Index", new { unreadOnly = true })" class="filter-chip @(Model.UnreadOnly ? "active" : "")">
        <i class="fas fa-envelope"></i> Chưa đọc
    </a>
    <a href="@Url.Action("Index", new { type = "Info" })" class="filter-chip @(Model.CurrentFilter == "Info" ? "active" : "")">
        <i class="fas fa-info-circle"></i> Thông tin
    </a>
    <a href="@Url.Action("Index", new { type = "Warning" })" class="filter-chip @(Model.CurrentFilter == "Warning" ? "active" : "")">
        <i class="fas fa-exclamation-triangle"></i> Cảnh báo
    </a>
    <a href="@Url.Action("Index", new { type = "Academic" })" class="filter-chip @(Model.CurrentFilter == "Academic" ? "active" : "")">
        <i class="fas fa-graduation-cap"></i> Học vụ
    </a>
    
    <div class="ml-auto">
        <button class="btn btn-sm btn-ghost" onclick="markAllAsRead()">
            <i class="fas fa-check-double"></i> Đánh dấu tất cả đã đọc
        </button>
    </div>
</div>

<!-- Notification List -->
<div class="notification-list">
    @if (Model.Notifications.Any())
    {
        @foreach (var notification in Model.Notifications)
        {
            var iconClass = notification.Type?.ToLower() ?? "info";
            var icon = iconClass switch {
                "warning" => "fa-exclamation-triangle",
                "success" => "fa-check-circle",
                "error" => "fa-times-circle",
                "academic" => "fa-graduation-cap",
                "system" => "fa-cog",
                _ => "fa-info-circle"
            };
            
            <div class="notification-item @(!notification.IsRead ? "unread" : "")" 
                 data-id="@notification.Id"
                 onclick="openNotification(@notification.Id, '@(notification.ActionUrl ?? "")')">
                
                <div class="notification-icon @iconClass">
                    <i class="fas @icon"></i>
                </div>
                
                <div class="notification-content">
                    <div class="notification-title">
                        @notification.Title
                        @if (notification.Priority == "high")
                        {
                            <span class="badge bg-error">Quan trọng</span>
                        }
                        @if (!notification.IsRead)
                        {
                            <span class="badge bg-brand">Mới</span>
                        }
                    </div>
                    <div class="notification-message">@notification.Message</div>
                    <div class="notification-meta">
                        <span><i class="far fa-clock"></i> @notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        @if (notification.IsRead && notification.ReadAt.HasValue)
                        {
                            <span><i class="fas fa-eye"></i> Đã đọc @notification.ReadAt.Value.ToString("dd/MM HH:mm")</span>
                        }
                    </div>
                </div>
                
                <div class="notification-actions" onclick="event.stopPropagation();">
                    <button class="mark-read-btn @(notification.IsRead ? "read" : "")" 
                            onclick="markAsRead(@notification.Id, this)"
                            title="@(notification.IsRead ? "Đã đọc" : "Đánh dấu đã đọc")">
                    </button>
                    <button class="btn btn-xs btn-ghost" onclick="deleteNotification(@notification.Id)">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-bell-slash"></i>
            <h3 class="text-xl font-semibold mb-2">Không có thông báo</h3>
            <p>Bạn đã đọc hết tất cả thông báo!</p>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <div class="pagination-container">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1, type = Model.CurrentFilter, unreadOnly = Model.UnreadOnly })" class="page-btn">
                <i class="fas fa-chevron-left"></i>
            </a>
        }
        
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <span class="page-btn active">@i</span>
            }
            else
            {
                <a href="@Url.Action("Index", new { page = i, type = Model.CurrentFilter, unreadOnly = Model.UnreadOnly })" class="page-btn">@i</a>
            }
        }
        
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1, type = Model.CurrentFilter, unreadOnly = Model.UnreadOnly })" class="page-btn">
                <i class="fas fa-chevron-right"></i>
            </a>
        }
    </div>
}

@section Scripts {
<script src="~/lib/signalr/signalr.min.js"></script>
<script>
    // SignalR connection for real-time notifications
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/notificationHub")
        .withAutomaticReconnect()
        .build();

    connection.on("ReceiveNotification", function (notification) {
        // Show toast notification
        showToast(notification.title, notification.message, notification.type);
        
        // Refresh page to show new notification
        location.reload();
    });

    connection.start().catch(function (err) {
        console.error('SignalR connection error:', err);
    });

    function markAsRead(id, btn) {
        fetch(`/NotificationCenter/MarkAsRead/${id}`, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                btn.classList.add('read');
                btn.closest('.notification-item').classList.remove('unread');
                updateUnreadCount(-1);
            }
        });
    }

    function markAllAsRead() {
        if (!confirm('Đánh dấu tất cả thông báo là đã đọc?')) return;
        
        fetch('/NotificationCenter/MarkAllAsRead', {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.querySelectorAll('.notification-item').forEach(item => {
                    item.classList.remove('unread');
                    item.querySelector('.mark-read-btn').classList.add('read');
                });
                updateUnreadCount(-data.count);
            }
        });
    }

    function openNotification(id, actionUrl) {
        // Mark as read first
        fetch(`/NotificationCenter/MarkAsRead/${id}`, {
            method: 'POST'
        });
        
        // Navigate to action URL if provided
        if (actionUrl) {
            window.location.href = actionUrl;
        }
    }

    function deleteNotification(id) {
        if (!confirm('Xóa thông báo này?')) return;
        
        fetch(`/NotificationCenter/Delete/${id}`, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.querySelector(`[data-id="${id}"]`).remove();
            }
        });
    }

    function updateUnreadCount(change) {
        const statValue = document.querySelector('.notification-stat:last-child .notification-stat-value');
        if (statValue) {
            const current = parseInt(statValue.textContent);
            statValue.textContent = Math.max(0, current + change);
        }
    }

    function showToast(title, message, type) {
        // Create toast element
        const toast = document.createElement('div');
        toast.className = `toast toast-${type || 'info'}`;
        toast.innerHTML = `
            <div class="toast-icon">
                <i class="fas fa-bell"></i>
            </div>
            <div class="toast-content">
                <div class="toast-title">${title}</div>
                <div class="toast-message">${message}</div>
            </div>
            <button class="toast-close" onclick="this.parentElement.remove()">
                <i class="fas fa-times"></i>
            </button>
        `;
        
        document.body.appendChild(toast);
        
        // Auto remove after 5 seconds
        setTimeout(() => toast.remove(), 5000);
    }
</script>
}
