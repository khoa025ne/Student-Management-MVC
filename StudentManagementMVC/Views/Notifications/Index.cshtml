@model IEnumerable<DataAccess.Entities.Notification>

@{
    ViewData["Title"] = "Quản lý Thông báo";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0 text-gray-800">Tất cả Thông báo</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Gửi thông báo
        </a>
    </div>

    <partial name="_Notifications" />

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Người nhận</th>
                            <th>Tiêu đề</th>
                            <th>Nội dung</th>
                            <th>Ngày gửi</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Student?.User?.FullName ?? "N/A")</td>
                                <td>@item.Title</td>
                                <td>@item.Message</td>
                                <td>@item.CreatedAt</td>
                                <td>@(item.IsRead ? "Đã đọc" : "Chưa đọc")</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@item.NotificationId" method="post" style="display:inline">
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
