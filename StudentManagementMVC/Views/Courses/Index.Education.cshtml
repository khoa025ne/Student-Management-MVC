            padding: 0.5rem 1rem;
            border-radius: var(--radius-full);
            font-weight: 600;
            font-size: 0.85rem;
        }
        
        .edu-major-badge.se {
            background: rgba(59, 130, 246, 0.2);
            color: #60A5FA;
            border: 1px solid rgba(59, 130, 246, 0.3);
        }
        
        .edu-major-badge.ia {
            background: rgba(16, 185, 129, 0.2);
            color: #34D399;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        
        .edu-major-badge.ai {
            background: rgba(139, 92, 246, 0.2);
            color: #A78BFA;
            border: 1px solid rgba(139, 92, 246, 0.3);
        }
        
        .edu-major-badge.default {
            background: rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
        }
        
        /* Action Buttons */
        .edu-action-btns {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }
        
        .edu-btn-action {
            width: 40px;
            height: 40px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            text-decoration: none;
        }
        
        .edu-btn-action.edit {
            background: rgba(59, 130, 246, 0.2);
            color: #60A5FA;
        }
        
        .edu-btn-action.edit:hover {
            background: #3B82F6;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
        }
        
        .edu-btn-action.delete {
            background: rgba(239, 68, 68, 0.2);
            color: #F87171;
        }
        
        .edu-btn-action.delete:hover {
            background: #EF4444;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
        }
        
        /* Empty State */
        .edu-empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }
        
        .edu-empty-state i {
            font-size: 4rem;
            color: rgba(255, 255, 255, 0.2);
            margin-bottom: 1rem;
        }
        
        .edu-empty-state h3 {
            font-size: 1.25rem;
            color: white;
            margin-bottom: 0.5rem;
        }
        
        .edu-empty-state p {
            color: rgba(255, 255, 255, 0.5);
            margin-bottom: 1.5rem;
        }
    </style>
}

