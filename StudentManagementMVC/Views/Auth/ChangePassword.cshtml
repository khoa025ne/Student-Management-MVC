        <text>
        Swal.fire({
            icon: 'error',
            title: 'Lỗi!',
            text: '@TempData["ErrorMessage"]',
            confirmButtonColor: '#667eea'
        });
        </text>
        }
        
        @if (TempData["SuccessMessage"] != null)
        {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Thành công!',
            text: '@TempData["SuccessMessage"]',
            confirmButtonColor: '#667eea',
            timer: 2000,
            showConfirmButton: false
        }).then(function() {
            window.location.href = '@Url.Action("Login", "Auth")';
        });
        </text>
        }
    </script>
