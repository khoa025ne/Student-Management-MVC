@model DataAccess.Entities.User

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4><i class="fas fa-user-edit"></i> Chỉnh sửa người dùng</h4>
                </div>
                <div class="card-body">
                    <partial name="_Notifications" />

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="PasswordHash" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="MustChangePassword" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên *</label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email *</label>
                            <input asp-for="Email" class="form-control" type="email" required readonly />
                            <small class="text-muted">Email không thể thay đổi</small>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label">Vai trò *</label>
                            @if (Model.Role?.RoleName == "Admin")
                            {
                                <select asp-for="RoleId" class="form-select" required disabled>
                                    @foreach (var role in (ViewBag.Roles as IEnumerable<DataAccess.Entities.Role>) ?? Enumerable.Empty<DataAccess.Entities.Role>())
                                    {
                                        <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId)">
                                            @role.RoleName - @role.Description
                                        </option>
                                    }
                                </select>
                                <small class="text-muted">Không thể thay đổi vai trò Admin</small>
                                <input type="hidden" asp-for="RoleId" />
                            }
                            else
                            {
                                <select asp-for="RoleId" class="form-select" required>
                                    @foreach (var role in (ViewBag.Roles as IEnumerable<DataAccess.Entities.Role>) ?? Enumerable.Empty<DataAccess.Entities.Role>())
                                    {
                                        <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId)">
                                            @role.RoleName - @role.Description
                                        </option>
                                    }
                                </select>
                            }
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Tài khoản hoạt động</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ngày tạo</label>
                            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                        </div>

                        @if (Model.LastLogin.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label">Đăng nhập lần cuối</label>
                                <input type="text" class="form-control" value="@Model.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                        }

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
