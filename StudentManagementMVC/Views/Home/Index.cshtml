@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Hero Section -->
    <div class="hero-section animate-fadeIn">
        <p class="welcome-text">Xin chào,</p>
        <h1>@User.Identity.Name</h1>
        <p class="hero-description">
            Chào mừng bạn quay lại. 
            @if (User.IsInRole("Student"))
            {
                <span>Theo dõi tiến độ học tập và đăng ký môn học mới.</span>
            }
            else if (User.IsInRole("Admin"))
            {
                <span>Quản lý toàn bộ hệ thống từ đây.</span>
            }
            else if (User.IsInRole("Manager"))
            {
                <span>Quản lý sinh viên và lớp học.</span>
            }
            else
            {
                <span>Xem danh sách lớp và nhập điểm cho sinh viên.</span>
            }
        </p>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <!-- Admin Stats -->
        <div class="row g-4 stagger-children">
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Người dùng</h4>
                        <p class="text-primary">--</p>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Sinh viên</h4>
                        <p class="text-success">--</p>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Môn học</h4>
                        <p class="text-warning">--</p>
                    </div>
                    <div class="stat-card-icon warning">
                        <i class="fas fa-book"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Lớp học</h4>
                        <p class="text-info">--</p>
                    </div>
                    <div class="stat-card-icon info">
                        <i class="fas fa-chalkboard"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Quick Actions -->
        <div class="row g-4 mt-2">
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon primary">
                            <i class="fas fa-users-cog"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Quản trị Hệ thống</h5>
                            <small class="text-muted">Người dùng & Phân quyền</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Quản lý tài khoản người dùng, phân quyền truy cập hệ thống.</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Truy cập
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon success">
                            <i class="fas fa-university"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Quản lý Đào tạo</h5>
                            <small class="text-muted">Chương trình học</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Thiết lập học kỳ, môn học và xếp lớp học.</p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-success btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Quản lý Môn học
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon info">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Dữ liệu Sinh viên</h5>
                            <small class="text-muted">Hồ sơ sinh viên</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Quản lý thông tin cá nhân và hồ sơ học tập của sinh viên.</p>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-right me-1"></i>Xem danh sách
                    </a>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole("Manager"))
    {
        <!-- Manager Dashboard -->
        <div class="row g-4 stagger-children">
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Sinh viên</h4>
                        <p class="text-primary">--</p>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Lớp học</h4>
                        <p class="text-success">--</p>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="fas fa-chalkboard"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Yêu cầu chuyển lớp</h4>
                        <p class="text-warning">--</p>
                    </div>
                    <div class="stat-card-icon warning">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Học kỳ hiện tại</h4>
                        <p class="text-info">--</p>
                    </div>
                    <div class="stat-card-icon info">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-md-6">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon primary">
                            <i class="fas fa-users"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Quản lý Sinh viên</h5>
                            <small class="text-muted">Hồ sơ & Đăng ký</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Theo dõi hồ sơ sinh viên và tình trạng nhập học.</p>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-1"></i>Quản lý
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon warning">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Lớp học</h5>
                            <small class="text-muted">Quản lý Lớp</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Xem danh sách lớp và sĩ số sinh viên.</p>
                    <a asp-controller="Classes" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-arrow-right me-1"></i>Xem Lớp
                    </a>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole("Teacher"))
    {
        <!-- Teacher Dashboard -->
        <div class="row g-4 stagger-children">
            <div class="col-6 col-lg-4">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Lớp giảng dạy</h4>
                        <p class="text-primary">--</p>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-4">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Sinh viên</h4>
                        <p class="text-success">--</p>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Chờ nhập điểm</h4>
                        <p class="text-warning">--</p>
                    </div>
                    <div class="stat-card-icon warning">
                        <i class="fas fa-edit"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-md-6">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon success">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Lớp của tôi</h5>
                            <small class="text-muted">Giảng dạy</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Xem danh sách các lớp được phân công giảng dạy.</p>
                    <a asp-controller="Classes" asp-action="MyClasses" class="btn btn-success">
                        <i class="fas fa-arrow-right me-1"></i>Xem lớp
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon warning">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Nhập điểm</h5>
                            <small class="text-muted">Đánh giá</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Nhập điểm và đánh giá kết quả học tập cho sinh viên.</p>
                    <a asp-controller="EnrollmentGrades" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-arrow-right me-1"></i>Nhập điểm
                    </a>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole("Student"))
    {
        <!-- Student Stats -->
        <div class="row g-4 stagger-children">
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>GPA Tích Lũy</h4>
                        <p class="text-primary">--</p>
                    </div>
                    <div class="stat-card-icon primary">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Tín Chỉ Tích Lũy</h4>
                        <p class="text-success">--</p>
                    </div>
                    <div class="stat-card-icon success">
                        <i class="fas fa-book-open"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Môn Đang Học</h4>
                        <p class="text-info">--</p>
                    </div>
                    <div class="stat-card-icon info">
                        <i class="fas fa-calendar"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="stat-card">
                    <div class="stat-card-content">
                        <h4>Lịch học hôm nay</h4>
                        <p class="text-warning">--</p>
                    </div>
                    <div class="stat-card-icon warning">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Student Quick Actions -->
        <div class="row g-4 mt-2">
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon info">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Đăng ký môn học</h5>
                            <small class="text-muted">Học tập</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Đăng ký các môn học cho học kỳ tới.</p>
                    <a asp-controller="Enrollments" asp-action="Register" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-1"></i>Đăng ký ngay
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon success">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Bảng điểm</h5>
                            <small class="text-muted">Kết quả</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Xem điểm chi tiết và tiến độ học tập.</p>
                    <a asp-controller="Scores" asp-action="MyGrades" class="btn btn-success">
                        <i class="fas fa-arrow-right me-1"></i>Xem điểm
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-modern p-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="stat-card-icon warning">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-semibold">Lịch học</h5>
                            <small class="text-muted">Thời khóa biểu</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Xem thời khóa biểu tuần này.</p>
                    <a asp-controller="Schedule" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-right me-1"></i>Xem lịch
                    </a>
                </div>
            </div>
        </div>
    }
</div>
