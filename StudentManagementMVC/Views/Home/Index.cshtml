                </div>
                <p class="action-card-description">
                    Quản lý thông tin cá nhân, hồ sơ học tập và kết quả của sinh viên.
                </p>
                <a asp-controller="Students" asp-action="Index" class="action-btn info">
                    Xem danh sách <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    }
