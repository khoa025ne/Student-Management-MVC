    else if (User.IsInRole("Student"))
    {
        <!-- Student Hero Section -->
        <div class="dashboard-hero animate-in" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="hero-content">
                <p class="hero-greeting">
                    <i class="fas fa-sun"></i>
                    @greeting,
                </p>
                <h1 class="hero-name">@userName</h1>
                <span class="hero-role">
                    <i class="fas fa-user-graduate"></i>
                    Sinh viên
                </span>
                <p class="hero-description">
                    Theo dõi tiến độ học tập, đăng ký môn học mới và xem lịch học của bạn.
                </p>
            </div>
        </div>

        <!-- Student Stats -->
        <h3 class="section-title animate-in delay-1">
            <i class="fas fa-graduation-cap"></i>
            Tiến độ học tập
        </h3>
        <div class="stats-grid">
            <div class="stat-card-premium primary animate-in delay-1">
                <div class="stat-header">
                    <div>
                        <div class="stat-value">--</div>
                        <div class="stat-label">GPA Tích Lũy</div>
                    </div>
                    <div class="stat-icon primary">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card-premium success animate-in delay-2">
                <div class="stat-header">
                    <div>
                        <div class="stat-value">--</div>
                        <div class="stat-label">Tín Chỉ Tích Lũy</div>
                    </div>
                    <div class="stat-icon success">
                        <i class="fas fa-book-open"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card-premium info animate-in delay-3">
                <div class="stat-header">
                    <div>
                        <div class="stat-value">--</div>
                        <div class="stat-label">Môn Đang Học</div>
                    </div>
                    <div class="stat-icon info">
                        <i class="fas fa-calendar"></i>
                    </div>
                </div>
            </div>
            
            <div class="stat-card-premium warning animate-in delay-4">
                <div class="stat-header">
                    <div>
                        <div class="stat-value">--</div>
                        <div class="stat-label">Lịch học hôm nay</div>
                    </div>
                    <div class="stat-icon warning">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Student Quick Actions -->
        <h3 class="section-title animate-in delay-2">
            <i class="fas fa-bolt"></i>
            Tác vụ nhanh
        </h3>
        <div class="action-grid">
            <div class="action-card animate-in delay-2">
                <div class="action-card-header">
                    <div class="action-card-icon info">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <div>
                        <h5 class="action-card-title">Đăng ký môn học</h5>
                        <p class="action-card-subtitle">Học kỳ mới</p>
                    </div>
                </div>
                <p class="action-card-description">
                    Đăng ký các môn học cho học kỳ tới theo kế hoạch đào tạo.
                </p>
                <a asp-controller="Enrollments" asp-action="Register" class="action-btn primary">
                    Đăng ký ngay <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            <div class="action-card animate-in delay-3">
                <div class="action-card-header">
                    <div class="action-card-icon success">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div>
                        <h5 class="action-card-title">Bảng điểm</h5>
                        <p class="action-card-subtitle">Kết quả học tập</p>
                    </div>
                </div>
                <p class="action-card-description">
                    Xem điểm chi tiết các môn học và tiến độ hoàn thành chương trình.
                </p>
                <a asp-controller="Scores" asp-action="MyGrades" class="action-btn success">
                    Xem điểm <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            <div class="action-card animate-in delay-4">
                <div class="action-card-header">
                    <div class="action-card-icon secondary">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div>
                        <h5 class="action-card-title">Lịch học</h5>
                        <p class="action-card-subtitle">Thời khóa biểu</p>
                    </div>
                </div>
                <p class="action-card-description">
                    Xem thời khóa biểu tuần này và các sự kiện quan trọng.
                </p>
                <a asp-controller="Schedule" asp-action="Index" class="action-btn secondary">
                    Xem lịch <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    }
</div>
